import { Button, VerticalBox, HorizontalBox, Slider} from "std-widgets.slint";

export component AppWindow inherits Window {
    background: #4b4e53cc;
    in-out property<string> password: "Password";
    in-out property<int> words_num: 3;
    callback request-generate-password();
    callback request-change-words_num();

    VerticalBox {
        opacity: 1;
        Text {
            text: "Generated Password: \{root.password}";
            wrap: TextWrap.word-wrap;
            color: #ffffffcc;
            font-italic: false;
            font-size: 20px;
            
        }
        Button {
            text: "Generate new";
            clicked => {
                root.request-generate-password();
            }
        }
        HorizontalBox {
            Slider {
                value: root.words_num;
                minimum: 1;
                maximum: 5;
                changed => {
                    root.words_num = self.value;
                    root.request-change-words_num();
                }
            }
            Text {
                text: "Number of words: \{root.words_num}";
                vertical-alignment: center;
                horizontal-alignment: center;
                font-size: 20px;
            }
        }
    }
}